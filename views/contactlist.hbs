<!DOCTYPE html>
<html>
  <head>
    <title>Code Fellows Contact Manager</title>

    <!-- Bring In jQuery -->
    <script src="../bower_components/jquery/jquery.js"></script>

    <!-- Bring In Bootstrap -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Application Styles and Scripts -->
    <link rel="stylesheet" href="/jsbootcamp.css">
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">
    <script src="/contactlist.js"></script>
    <script>
      $(document).ready(function() {
        makeContactRowClickable();
      });
    </script>
  </head>

  <body>
    <div class="container-fluid">
      <div class="span2" background="/notebook.png">
        <h1 class="fa fa-maxcdn" background="/notebook.png">JS Bootcamp Contact List</h1>
      </div>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Nickname</th>
          <th>Company</th>
          <th background="/notebook.png">Note</th>
        </tr>
      <thead>

      <tbody>
        {{#each contacts}}
          <tr data-contact-guid="{{guid}}">
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td>{{nickname}}</td>
            <td>{{company}}</td>
            <td class="fa fa-maxcdn">NoNoNo</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <h2>
      <a href="/new_contact">Add</a>
    </h2>
  </body>
</html>
